<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:background="#b2b6b5b5"
    tools:context="com.linjichuan.www.login.Login">


    <!--页面上方写"发布饭约”的文本框-->
    <TextView
        android:text="个人资料管理"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_width="1080dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bkg_16"
        android:gravity="center"
        android:id="@+id/textView2" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:rowCount="8"
        android:columnCount="4"
        android:gravity="left"
        android:stretchMode="none">

        <!--时间选择项-->
        <TextView
            android:text="昵称"
            android:textSize="16sp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@drawable/underline"
            android:id="@+id/textView3"
            android:gravity="center"
            />
        <EditText

            android:paddingTop="0dp"
            android:textSize="16sp"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:inputType="time"
            android:layout_column="2"
            android:layout_row="1"
            android:ems="10"
            android:background="@drawable/underline"
            android:id="@+id/editText2"
            android:gravity="center_vertical"/>


        <TextView
            android:text="性别"
            android:textSize="16sp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:id="@+id/textView4"
            android:background="@drawable/underline"/>
        <EditText
            android:layout_height="50dp"
            android:layout_width="310dp"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:paddingTop="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:background="@drawable/underline"
            android:gravity="center_vertical"

            android:textSize="16sp"
            />


        <TextView
            android:text="学校"
            android:textSize="16sp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="top"

            android:background="@drawable/underline"
            android:id="@+id/textViewFood"
            android:gravity="center"
            />
        <EditText

            android:paddingTop="0dp"
            android:textSize="16sp"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:inputType="time"
            android:layout_column="2"
            android:layout_row="3"
            android:ems="10"
            android:background="@drawable/underline"
            android:id="@+id/editTextFood"
            android:gravity="center_vertical"
            />

        <!--地区选择项-->
        <TextView
            android:text="地区"
            android:textSize="16sp"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:background="@drawable/underline"
            android:id="@+id/textViewAddress"
            android:gravity="center"
            />
        <EditText

            android:paddingTop="0dp"
            android:textSize="16sp"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:inputType="time"
            android:layout_column="2"
            android:layout_row="4"
            android:ems="10"
            android:background="@drawable/underline"
            android:id="@+id/editTextAddress"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"/>




        <TextView
            android:text="联系方式"
            android:textSize="16sp"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:background="@drawable/underline"
            android:id="@+id/textViewPeople"
            android:gravity="center"
            />
        <EditText

            android:textSize="16sp"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:inputType="time"
            android:layout_column="2"
            android:layout_row="6"
            android:ems="10"
            android:background="@drawable/underline"
            android:id="@+id/editTextPeople"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"/>

        <!--介绍信息填写项-->
        <Button
            android:text="修改"

            android:textSize="16sp"
            android:layout_column="1"
            android:layout_row="7"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="top"

            android:paddingTop="15dp"

            android:gravity="center"
            android:id="@+id/btnmodify"
            />

    </GridLayout>

    <!--左上角返回按钮-->
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/button_back"
        android:drawableLeft="@drawable/btn_back"
        android:background="#00ffffff"/>




    <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/gridLayout"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#76050303"
            android:gravity="right">


            <Button
                android:text="发布"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:id="@+id/button_release"
                android:background="#fca300"/>

        </LinearLayout>-->
</RelativeLayout>
